Question: 9. Palindrome Number
Link: https://leetcode.com/problems/palindrome-number/

Solution:

class Solution {
public:
    bool isPalindrome(int x) {
        if(x<0)
            return false;
        else{
            int n=x;
            int rem,sum=0;
            int half=(int)n/10;
           do{
                rem=x%10;
                sum=(sum*10)+rem;
                x/=10;
            } while(x>=half);
            x=(x*10)+rem;
            if(sum==x)
            return true;
            else
                return false;
        }
    }
};
